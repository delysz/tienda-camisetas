generator client {
  provider = "prisma-client-js"
  // ¡Asegúrate de que NO haya ninguna línea aquí que diga output!
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  image       String
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
}